<h1 class="todo_list_title">Editar perfil</h1><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<center>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
 </center> 

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<center>
  <div class="field">
    <%= f.label :password , " Senha"%> <i>(Deixe em branco se não deseja alterá-lá)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>No mínimo <%=@minimum_password_length %> caracteres</em>
    <% end %>
  </div>
</center>

<center>
  <div class="field">
    <%= f.label :password_confirmation , "Confirmação da senha"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</center>

<center>
  <div class="field">
    <%= f.label :current_password , "Senha atual"%> <i>(Nós precisamos de sua senha atual para confirmar as mudanças!)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
</center>

<center>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
</center>
<% end %>


<h3><center>Cancelar minha conta</center></h3>

<center>
  <p>Descontente? <%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</center>

<center>
  <%= link_to "Voltar", :back %>
</center>