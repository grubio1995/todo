<!DOCTYPE html>
<html>
  <head>
    <title>Lista de tarefas</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  </head>
<body>
<div class="container">

  <% if notice %>
    <center><p class="alert alert-success"><%= notice %></p></center>
  <% end %>
  
  <% if alert %>
    <center><p class="alert alert-danger"><%= alert %></p></center>
  <% end %>

    <%= yield %>
   </div>

<p class="navbar-text float-right">
<% if user_signed_in? %>
  <center><strong>Logado como: </strong><%= current_user.email %></center><br>
  <center>
      <%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
  </center>
<% end %>
    
  </body>
</html>